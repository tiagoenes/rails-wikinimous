
<div class="container text-center articles">
  <h1>Articles</h1>
  <br>
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-12 col-md-6 col-lg-4 article-element ">
      <div class="text-left article-title"><%= link_to article.title, article_path(article.id) %> </div>
      <div class="article-content d-flex align-items-center"><a><%= link_to article.content, article_path(article.id)  %></a></div>
    </div>
    <% end %>
  </div>


